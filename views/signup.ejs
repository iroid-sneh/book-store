<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookstore - Signup/Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #2C346B;
            /* Dark background matching palette */
            color: #FFFFFF;
            /* Light text */
        }

        .auth-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .auth-form {
            background-color: #FFFFFF;
            /* Slightly lighter dark */
            border-radius: 8px;
            padding: 2rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
            width: 100%;
            max-width: 400px;
        }

        .auth-form h1 {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: #2C346B;
            /* Accent color matching reference */
            text-align: center;
        }

        .auth-form label {
            color: #2C346B;
            display: block;
            margin-bottom: 0.5rem;
            font-weight: bold;
        }

        .auth-form input {
            width: 90%;
            padding: 1.5rem 1rem;
            margin-bottom: 1rem;
            border: 1px solid #333;
            border-radius: 10rem;
            background-color: #333;
            color: #FFFFFF;
        }

        .auth-form input:focus {
            border-color: #2C346B;
            outline: none;
        }

        .auth-form button {
            width: 97%;
            margin-top: 20px;
            padding: 0.75rem;
            color: #FFFFFF;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            font-weight: bold;
            background-color: #3245d1;
            cursor: pointer;
        }

        .auth-form button:hover {
            background-color: #2C346B;
        }

        .auth-form .alt-option {
            margin-top: 1rem;
            text-align: center;
        }

        .auth-form .alt-option a {
            color: #2C346B;
            text-decoration: none;
        }

        .auth-form .alt-option a:hover {
            text-decoration: underline;
        }

        .auth-form input,
        .auth-form select {
            width: 90%;
            padding: 12px 15px;
            font-size: 16px;
            border: none;
            border-radius: 8px;
        }

        .auth-form input,
        .auth-form select {
            background-color: #ccc;
            color: #ffffff;
        }

        .auth-form input::placeholder {
            color: #000;
        }

        .auth-form input,
        .auth-form button {
            border-radius: 30px;
            /* Adjust this value for more/less rounded corners */
        }
    </style>
</head>

<body>

    <div class="auth-container">
        <form class="auth-form" id="signup-form">
            <h1>Signup</h1>
            <!-- <label for="name">Name</label> -->
            <input type="text" id="name" placeholder="Enter your name" required>

            <!-- <label for="email">Email</label> -->
            <input type="email" id="email" placeholder="Enter your email" required>

            <!-- <label for="password">Password</label> -->
            <input type="password" id="password" placeholder="Enter your password" required>

            <button type="submit" id="submit">Sign Up</button>
        </form>
    </div>

    <script>

        document.getElementById('signup-form').addEventListener('submit', (event) => {
            event.preventDefault();
            const data = {
                name: document.getElementById('name').value,
                email: document.getElementById('email').value,
                password: document.getElementById('password').value,
            }
            $.ajax({
                url: 'http://localhost:8001/api/signup',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (data) {
                    window.location.href = 'http://localhost:8001';
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                    alert('Failed to create user. Please try again.');
                    window.location.href = 'http://localhost:8001/error'; // Redirect on error
                }
            })

        });
    </script>

</body>

</html>