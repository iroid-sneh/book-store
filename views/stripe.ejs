<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        /* General Page Styles */
        body {
            background-color: #ffffff;
            font-family: Arial, sans-serif;
            color: #ffffff;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .payment-container {
            display: flex;
            flex-direction: row;
            gap: 30px;
            padding: 40px;
            background-color: #2c2c54;
            border-radius: 15px;
            max-width: 800px;
            width: 90%;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        /* Product Section Styles */
        .product-details {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            flex: 1;
            text-align: center;
        }

        .product-details img {
            width: 250px;
            height: 100px;
            /* background-color: #40407a; */
            object-fit: contain;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .product-details h2 {
            font-size: 22px;
            margin: 10px 0;
        }

        .product-details p {
            font-size: 18px;
            color: #d1d1d1;
        }

        /* Payment Section Styles */
        .payment-form-container {
            flex: 1.5;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 20px;
        }

        .payment-form-container h2 {
            font-size: 22px;
            margin-bottom: 20px;
            text-align: center;
        }

        #payment-form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        #payment-form input, #payment-form select, #payment-form button {
            width: 100%;
            padding: 12px 15px;
            font-size: 16px;
            border: none;
            border-radius: 8px;
        }

        #payment-form input, #payment-form select {
            background-color: #40407a;
            color: #ffffff;
        }

        #payment-form input::placeholder {
            color: #b5b5b5;
        }

        #payment-form button {
            background-color: #007bff;
            color: #ffffff;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        #payment-form button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="payment-container">
        <!-- Product Section -->
        <div class="product-details">
            <img src="images/main-logo.png" alt="Bookstore Image">
            <h2>Total</h2>
            <p>$<%= (cartTotal / 100).toFixed(2) %></p>
        </div>

        <!-- Payment Section -->
        <div class="payment-form-container">
            <h2>Pay with Card</h2>
            <form id="payment-form">
                <input type="email" placeholder="Email" required>
                <input type="text" placeholder="Cardholder Name" required>
                <select required>
                    <option value="">Select Country</option>
                    <option value="United States">United States</option>
                    <option value="Canada">Canada</option>
                    <option value="India">India</option>
                    <!-- Add more countries -->
                </select>
                <div id="card-element"></div>
                <button type="submit">Pay $<%= (cartTotal / 100).toFixed(2) %></button>
            </form>
        </div>
    </div>

    <script src="https://js.stripe.com/v3/"></script>
    <script>
        const stripe = Stripe('your-publishable-key'); // Replace with your Stripe publishable key
        const elements = stripe.elements();
        const card = elements.create('card');
        card.mount('#card-element');

        document.getElementById('payment-form').addEventListener('submit', async (e) => {
            e.preventDefault();

            const { error, paymentMethod } = await stripe.createPaymentMethod({
                type: 'card',
                card: card,
            });

            if (error) {
                alert(error.message);
            } else {
                alert('Payment Successful!');
                // Send payment method to your server for further processing
            }
        });
    </script>
</body>
</html>
